# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Model Configuration
ACE_MODEL=claude-3-5-sonnet-latest
ACE_MAX_TOKENS=2048
ACE_TEMPERATURE=0.0
ACE_SEED=42

# Runtime Configuration
ACE_LOG_LEVEL=INFO
ACE_STORAGE_DIR=./storage
ACE_RUNS_DIR=./runs

# Playbook Configuration
ACE_HARMFUL_THRESHOLD=3
ACE_DEDUP_SIMILARITY=0.92
ACE_MAX_OPERATIONS_PER_CURATOR=20

# Semantic Deduplication (Optional)
# Set to 'true' to use semantic embeddings for better duplicate detection
# Requires: pip install -r requirements-semantic.txt
# Memory usage: ~100MB
ACE_USE_SEMANTIC_DEDUP=false
ACE_EMBEDDING_MODEL=all-MiniLM-L6-v2
